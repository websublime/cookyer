{
  "lerna": "3.0.0",
  "version": "0.0.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "ignoreChanges": ["**/__tests__/**", "**/*.md"],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master", "next"],
      "message": "chore(release): Publish"
    }
  }
}
